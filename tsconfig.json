{
  "compilerOptions": {
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist",
    "build",
    "tests",
    ".eslintrc.cjs",
    "**/*.spec.js",
    "**/*.spec.ts",
    "node_modules",
  ]
}
