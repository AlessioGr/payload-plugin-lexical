{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "demo",
    "node_modules",
    "serialize-example",
    "dist",
    "build",
    "tests",
    ".eslintrc.cjs",
    "**/*.spec.js",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "esm": false
  }
}
